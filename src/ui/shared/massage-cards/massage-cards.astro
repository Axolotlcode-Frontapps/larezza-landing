---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props
---

<article class="massage">
    <div class="massage__container">
      <div class="massage__circle"></div>
      <h1 class="massage__title">{title}</h1>
      <p class="massage__text">{text}</p>
      <button class="massage__button">Saber m√°s...</button>
    </div>
</article>

<style>
  @reference "@/styles/app.css";

  .massage__container{
    @apply relative border-1 border-primary rounded-4xl p-4 xl:p-8 h-full transform transition-all duration-300 ease-out hover:-translate-y-2 hover:shadow-lg;
  }

  .massage__circle{
    @apply absolute bg-primary-foreground p-5 lg:p-3 xl:p-8 rounded-full top-0 right-0;
  }

  .massage__title{
    @apply text-lg md:text-2xl lg:text-xl xl:text-2xl text-primary font-bold mb-5 md:mb-8 xl:pr-80;
  }

  .massage__text{
    @apply text-base xl:text-xl text-primary mb-18 md:mb-20 2xl:mr-15;
  }

  .massage__button{
    @apply absolute bottom-6 text-base md:text-lg text-primary border-1 border-primary py-2 px-4 rounded-lg cursor-pointer hover:bg-primary-foreground hover:text-white;
  }
</style>