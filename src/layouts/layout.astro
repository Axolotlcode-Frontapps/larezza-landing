---
import "@/styles/app.css";
import '@fontsource-variable/montserrat';
import '@fontsource/bacasime-antique';

import { config } from "@/lib/config";
import Footer from "@/ui/shared/footer.astro";
import Header from "@/ui/shared/header/header.astro";

interface Props {
	title?: string;
	description?: string;
}

const { title = "Home", description = config.description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | {config.brand}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
